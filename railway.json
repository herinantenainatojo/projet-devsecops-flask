{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "watchPatterns": ["run.py"]  # Ajoutez cette ligne
  },
  "deploy": {
    "startCommand": "gunicorn --bind 0.0.0.0:8080 --workers 2 wsgi:app",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}